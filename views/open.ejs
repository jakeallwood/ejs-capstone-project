<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>

  <link rel="stylesheet" type="text/css" href="styles/main.css"/>
</head>
<header>

</header>
<body>
  <div class="main">
    <h1 id="title">Darkness Ablaze</h1>  <!-- testing with this set -->
    <% if (locals.cards) { %>
      <% cards.forEach(card => { %>
        <div class="card <%=card.rarity.replace(/\s+/g, '')%>">
          <img class="card-img" src=<%= card.images.large %>>
          <% if (card.cardmarket.hasOwnProperty("prices")) { %>
            <p class="price">$<%= card.cardmarket.prices.trendPrice.toFixed(2) %></p>
          <% } %>
        </div>
      <% }); %>
    <% } %>
    <form method="GET" class="pack-button-form">
      <input id="back" type="submit" value="go back" formaction="/">
    </form>
  </div>
  <!--<script src="scripts/cards.js" charset="utf-8"></script>-->
</body>
